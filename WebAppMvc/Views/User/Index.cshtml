@model IEnumerable<WebAppMvc.Domain.Entities.Feedback>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="GiveFeedback">New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mobile)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Message)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Url)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegisterDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mobile)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Message)
                </td>
                <td>
                    <a href="~/uploads/@item.Url" target="_blank">Download</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RegisterDate)
                </td>
                <td>
                    <button class="btn btn-link edit-btn" data-id="@item.Id">Edit</button> |  <button class="btn btn-link delete-btn" data-id="@item.Id">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>


<!-- Bootstrap Modal -->
<div class="modal fade" id="editModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body" id="editModalContent">
                <!-- Partial view will be loaded here -->
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            $('.edit-btn').click(function () {
                var id = $(this).data('id');
                $.get('/User/EditFeedback/' + id, function (data) {
                    console.log(data);
                    $('#editModalContent').html(data);
                    $('#editModal').modal('show');
                });
            });

            $('.delete-btn').on('click', function () {
            var id = $(this).data('id');
            if (confirm('Are you sure you want to delete this record?')) {
                $.ajax({
                    url: '/User/Delete/' + id,
                    type: 'POST',
                    success: function (result) {
                        // Optionally remove the row from the table
                        if(result.success){
                            alert(result.message);
                        location.reload(); }
                    },
                    error: function () {
                        alert('Error deleting record.');
                    }
                });
            }
        });

        });
    </script>
}