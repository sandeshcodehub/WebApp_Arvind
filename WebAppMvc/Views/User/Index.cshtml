            $(document).on('click', '#btnSave', function (e) {
                         e.preventDefault();
                         var form = $('#addForm')[0];
                         var formData = new FormData(form);

                        if (!$(form).valid()) return;

                        $.ajax({
                            url: '/User/PostFeedback',
                            type: 'POST',
                            data: formData,
                            processData: false,
                            contentType: false,
                            success: function (res) {
                                if (res.success) {                                    
                                    alert(res.message);
                                    $('#myModal').modal('hide');                                    
                                    $('#msgArea').text('');
                                    loadFeedbacks();
                                }
                                else
