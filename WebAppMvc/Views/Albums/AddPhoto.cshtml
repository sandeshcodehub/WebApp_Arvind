@model AddPhotoDTO

@{
    ViewData["Title"] = "Add Photo";
}

<h1>@ViewData["Title"]</h1>

<h1>@TempData["msg"]</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddPhoto" enctype="multipart/form-data" onsubmit="return validateFileSize()">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="AlbumId" class="control-label"></label>
                <select asp-for="AlbumId" class="form-select" asp-items="ViewBag.AlbumList">
                    <option value="">-Choose Album-</option>
                </select>
                <span asp-validation-for="AlbumId" class="text-danger"></span>
            </div>
            <div class="form-group  mb-3">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Attachment" class="control-label"></label>
                <input asp-for="Attachment" class="form-control" accept="image/*" onchange="previewImage(event)" />
                <span asp-validation-for="Attachment" class="text-danger"></span>
                <span id="fileError" class="text-danger" style="display:none;"></span>
            </div>
            <div class="form-group">
                <img id="imagePreview" style="max-width:300px; display:none;" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="Tags" class="control-label"></label>
                <input asp-for="Tags" class="form-control" />
                <span asp-validation-for="Tags" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Add Photo" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="PhotoGallery" asp-route-id="1">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function previewImage(event) {
            const input = event.target;
            const preview = document.getElementById('imagePreview');
            const errorLabel = document.getElementById("fileError");
           
            if (input.files && input.files[0].size < 102400)  // 100 KB = 100 * 1024
            {          

                const reader = new FileReader();

                reader.onload = function (e) {
                    preview.src = e.target.result;
                    preview.style.display = 'block';
                }

                reader.readAsDataURL(input.files[0]);

                errorLabel.innerText = "";
                errorLabel.style.display = "none";
            }
            else
            {
                errorLabel.innerText = "File size must be less than 100 KB.";
                errorLabel.style.display = "block";
                preview.src ="";
                preview.style.display = 'none';
                input.value = ""; // Clear the input if file is too large
            }
        }
        function validateFileSize() {
            const input = document.getElementById("Attachment");
            const errorLabel = document.getElementById("fileError");

            // if (input.files.length === 0) {
            //     errorLabel.innerText = "Please select a file.";
            //     errorLabel.style.display = "block";
            //     return false;
            // }

            const file = input.files[0];

            if (file.size > 102400) { // 100 KB = 100 * 1024
                errorLabel.innerText = "File size must be less than 100 KB.";
                errorLabel.style.display = "block";
                return false;
            }
            errorLabel.style.display = "none";
            return true;
        }
    </script>
}